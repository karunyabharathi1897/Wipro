package PatternPrinting;

//import java.util.Scanner;

/**
 *
 * @author Dell
 */
public class P1 {
    public static void main(String[] args) {
        //Scanner sc=new Scanner(System.in);
        for(int i=3;i>=-3;i--)
        {
            //System.out.println("jh");
            for(int j=3;j>=Math.abs(i);j--)
            {
                System.out.print("*");
            }
            for(int k=1;k<=Math.abs(i);k++)
            {
                System.out.print(" ");
            }
            
            System.out.println("");
        }
    }
            
}
