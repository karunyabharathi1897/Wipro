package javaapplication1;

import java.util.Scanner;

/**
 *
 * @author skcet
 */
public class Patt1 {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int size=sc.nextInt();
        int s=size;
        int w=1;
        for(int i=1;i<=size;i++)
        {
            for(int j=size;j>=i;j--)
            {
                System.out.print(s);
            }
            for(int k=w;k>1;k--)
            {
                System.out.print("  ");
            }
            for(int m=size;m>=i;m--)
            {
                System.out.print(s);
            }
            w++;
            s--;
            System.out.println("");
        }
    }
}
